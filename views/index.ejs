<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h2 class="mb-0">Welcome to Your Web Application</h2>
        </div>
        <div class="card-body">
          <% if (locals.user) { %>
            <h4>Welcome back, <%= user.username %>!</h4>
            <p>You are currently logged in.</p>
            <a href="/dashboard" class="btn btn-success">Go to Dashboard</a>
          <% } else { %>
            <h4>Welcome to the template!</h4>
            <p>This is a scalable web application template built with Node.js, EJS, and MongoDB.</p>
            <p>To get started, please register or login:</p>
            <div class="d-flex gap-2">
              <a href="/auth/register" class="btn btn-primary">Register</a>
              <a href="/auth/login" class="btn btn-secondary">Login</a>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>