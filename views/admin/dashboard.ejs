<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<!-- Add the admin-dashboard class to the main container div -->
<div class="container-fluid mt-5 admin-dashboard">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
      <div class="position-sticky pt-3">
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link active" href="/admin">
              <i class="bi bi-speedometer2"></i> Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/users">
              <i class="bi bi-people"></i> Administrer Brukere
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/quizzes">
              <i class="bi bi-card-list"></i> Administrer Quizzer
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/dashboard">
              <i class="bi bi-arrow-left"></i> Tilbake til Dashboard
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Main content -->
    <div class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Admin Dashboard</h1>
      </div>

      <!-- Stats cards -->
      <div class="row">
        <div class="col-md-4 mb-4">
          <div class="card text-white bg-primary">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h5 class="card-title">Totalt antall brukere</h5>
                  <h2 class="display-4"><%= stats.userCount %></h2>
                </div>
                <i class="bi bi-people-fill display-4"></i>
              </div>
            </div>
            <div class="card-footer d-flex align-items-center">
              <a href="/admin/users" class="text-white text-decoration-none w-100">
                Vis alle brukere
                <i class="bi bi-chevron-right"></i>
              </a>
            </div>
          </div>
        </div>

        <div class="col-md-4 mb-4">
          <div class="card text-white bg-success">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h5 class="card-title">Totalt antall quizzer</h5>
                  <h2 class="display-4"><%= stats.quizCount %></h2>
                </div>
                <i class="bi bi-card-checklist display-4"></i>
              </div>
            </div>
            <div class="card-footer d-flex align-items-center">
              <a href="/admin/quizzes" class="text-white text-decoration-none w-100">
                Vis alle quizzer
                <i class="bi bi-chevron-right"></i>
              </a>
            </div>
          </div>
        </div>

        <div class="col-md-4 mb-4">
          <div class="card text-white bg-info">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h5 class="card-title">Totalt antall spørsmål</h5>
                  <h2 class="display-4"><%= stats.questionCount %></h2>
                </div>
                <i class="bi bi-question-circle-fill display-4"></i>
              </div>
            </div>
            <div class="card-footer d-flex align-items-center">
              <a href="/admin/quizzes" class="text-white text-decoration-none w-100">
                Vis alle quizzer
                <i class="bi bi-chevron-right"></i>
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <!-- Recent users -->
        <div class="col-md-6 mb-4">
          <div class="card">
            <div class="card-header bg-light">
              <h5 class="mb-0">Nyeste brukere</h5>
            </div>
            <div class="list-group list-group-flush">
              <% if (recentUsers && recentUsers.length > 0) { %>
                <% recentUsers.forEach(function(user) { %>
                  <div class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                      <div class="d-flex align-items-center">
                        <img src="/uploads/<%= user.profileImage %>" alt="Profile" class="rounded-circle me-2" style="width: 32px; height: 32px;">
                        <div>
                          <h6 class="mb-0"><%= user.username || user.displayName || 'Ingen brukernavn' %></h6>
                          <small class="text-muted"><%= user.email %></small>
                        </div>
                      </div>
                      <span class="badge bg-<%= user.role === 'admin' ? 'danger' : 'primary' %>">
                        <%= user.role === 'admin' ? 'Admin' : 'Bruker' %>
                      </span>
                    </div>
                  </div>
                <% }); %>
              <% } else { %>
                <div class="list-group-item">
                  <p class="mb-0 text-muted">Ingen brukere funnet</p>
                </div>
              <% } %>
            </div>
            <div class="card-footer">
              <a href="/admin/users" class="btn btn-sm btn-outline-primary">Se alle brukere</a>
            </div>
          </div>
        </div>

        <!-- Popular quizzes -->
        <div class="col-md-6 mb-4">
          <div class="card">
            <div class="card-header bg-light">
              <h5 class="mb-0">Populære quizzer</h5>
            </div>
            <div class="list-group list-group-flush">
              <% if (popularQuizzes && popularQuizzes.length > 0) { %>
                <% popularQuizzes.forEach(function(quiz) { %>
                  <div class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                      <div>
                        <h6 class="mb-0"><%= quiz.title %></h6>
                        <small class="text-muted">Av: <%= quiz.createdBy.username || 'Ukjent' %> | Kategori: <%= quiz.category %></small>
                      </div>
                      <div class="text-end">
                        <span class="badge bg-success"><i class="bi bi-controller"></i> <%= quiz.timesPlayed %></span>
                      </div>
                    </div>
                  </div>
                <% }); %>
              <% } else { %>
                <div class="list-group-item">
                  <p class="mb-0 text-muted">Ingen quizzer funnet</p>
                </div>
              <% } %>
            </div>
            <div class="card-footer">
              <a href="/admin/quizzes" class="btn btn-sm btn-outline-primary">Se alle quizzer</a>
            </div>
          </div>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-md-6">
          <div class="card">
            <div class="card-header bg-primary text-white">
              <h3>Users Management</h3>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>Username</th>
                      <th>Email</th>
                      <th>Role</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% users.forEach(user => { %>
                      <tr>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td><%= user.role %></td>
                        <td>
                          <% if (user.role === 'user') { %>
                            <button class="btn btn-sm btn-success make-admin" data-id="<%= user._id %>">Make Admin</button>
                          <% } else { %>
                            <% if (user.username === 'Simen' && user.email === 'simenwaerstad2@gmail.com') { %>
                              <span class="badge bg-warning">Default Admin</span>
                            <% } else { %>
                              <button class="btn btn-sm btn-warning remove-admin" data-id="<%= user._id %>">Remove Admin</button>
                            <% } %>
                          <% } %>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="card">
            <div class="card-header bg-danger text-white">
              <h3>Quiz Management</h3>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>Title</th>
                      <th>Created By</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% quizzes.forEach(quiz => { %>
                      <tr>
                        <td><%= quiz.title %></td>
                        <td><%= quiz.createdBy.username %></td>
                        <td>
                          <button class="btn btn-sm btn-danger delete-quiz" data-id="<%= quiz._id %>">Delete</button>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Make admin
    document.querySelectorAll('.make-admin').forEach(button => {
      button.addEventListener('click', async function() {
        const userId = this.getAttribute('data-id');
        try {
          const response = await fetch(`/admin/users/${userId}/make-admin`, {
            method: 'PATCH',
            headers: { 'Content-Type': 'application/json' }
          });
          const data = await response.json();
          if (data.status === 'success') {
            alert('User has been made admin');
            location.reload();
          } else {
            alert(data.message);
          }
        } catch (err) {
          alert('An error occurred');
        }
      });
    });
    
    // Remove admin
    document.querySelectorAll('.remove-admin').forEach(button => {
      button.addEventListener('click', async function() {
        const userId = this.getAttribute('data-id');
        try {
          const response = await fetch(`/admin/users/${userId}/remove-admin`, {
            method: 'PATCH',
            headers: { 'Content-Type': 'application/json' }
          });
          const data = await response.json();
          if (data.status === 'success') {
            alert('Admin status removed');
            location.reload();
          } else {
            alert(data.message);
          }
        } catch (err) {
          alert('An error occurred');
        }
      });
    });
    
    // Delete quiz
    document.querySelectorAll('.delete-quiz').forEach(button => {
      button.addEventListener('click', async function() {
        if (confirm('Are you sure you want to delete this quiz? This action cannot be undone.')) {
          const quizId = this.getAttribute('data-id');
          try {
            const response = await fetch(`/admin/quizzes/${quizId}`, {
              method: 'DELETE'
            });
            const data = await response.json();
            if (data.status === 'success') {
              alert('Quiz has been deleted');
              location.reload();
            } else {
              alert(data.message);
            }
          } catch (err) {
            alert('An error occurred');
          }
        }
      });
    });
  });
</script>

<%- include('../partials/footer') %>